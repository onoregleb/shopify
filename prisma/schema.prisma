// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String         @id
  shop          String
  state         String
  isOnline      Boolean        @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean        @default(false)
  locale        String?
  collaborator  Boolean?       @default(false)
  emailVerified Boolean?       @default(false)

  // Добавляем связь к подпискам
  subscriptions Subscription[] // см. ниже
}

model Subscription {
  id             Int       @id @default(autoincrement())
  chargeId       String    @unique   // GID или просто numeric ID
  status         String               // e.g. "ACTIVE", "GRACE_PERIOD"
  name           String               // имя плана
  test           Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  shop           String               // дублируем для удобных запросов
  sessionId      String               // внешний ключ к Session.id
  session        Session   @relation(fields: [sessionId], references: [id])
}
